<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ListPreference
        app:key="theme"
        android:entries="@array/theme_entries"
        app:entryValues="@array/theme_values"
        app:title="@string/pref_theme"
        app:summary="%s"
        app:defaultValue="system"
        app:iconSpaceReserved="false"/>

    <ListPreference
        app:key="glucose_units"
        app:summary="%s"
        app:iconSpaceReserved="false"
        app:entryValues="@array/glucose_units_values"
        app:entries="@array/glucose_units_entries"
        app:defaultValue="mmol_l"
        app:title="@string/pref_list_glucose_units" />

    <ListPreference
        app:key="weight_units"
        app:summary="%s"
        app:iconSpaceReserved="false"
        app:entryValues="@array/weight_units_values"
        app:entries="@array/weight_units_entries"
        app:defaultValue="kg"
        app:title="@string/pref_list_weight_units" />

    <PreferenceCategory
        app:title="@string/pref_category_backup"
        app:iconSpaceReserved="false">

        <Preference
            app:iconSpaceReserved="false"
            app:key="export_backup"
            app:title="@string/pref_export_backup" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="import_backup"
            app:title="@string/pref_import_backup"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_category_google_drive"
        app:iconSpaceReserved="false">

        <SwitchPreference
            tools:isPreferenceVisible="true"
            app:isPreferenceVisible="false"
            app:key="drive_auto_sync"
            app:title="@string/pref_auto_sync"
            app:summary="@string/pref_auto_sync_summary"
            app:iconSpaceReserved="false" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="drive_create_backup"
            app:title="@string/pref_export_drive" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="drive_import"
            app:title="@string/pref_import_drive"/>

        <Preference
            tools:summary="May 24, 13:45"
            tools:isPreferenceVisible="true"
            app:isPreferenceVisible="false"
            app:iconSpaceReserved="false"
            app:key="drive_last_synced"
            app:title="@string/pref_last_synced"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/pref_about_app">

        <Preference
            app:iconSpaceReserved="false"
            app:key="rate_app"
            app:title="@string/pref_rate_app">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://play.google.com/store/apps/details?id=com.axel_stein.glucose_tracker" />

        </Preference>

        <Preference
            app:iconSpaceReserved="false"
            app:key="app_version"
            app:summary="@string/app_version"
            app:title="@string/app_version_title"/>

    </PreferenceCategory>

</PreferenceScreen>