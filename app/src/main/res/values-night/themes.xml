<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.GlucoseTracker" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="colorPrimary">@color/color_secondary_night</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_night</item>
        <item name="colorSecondary">@color/color_secondary_night</item>
        <item name="colorAccent">@color/color_secondary_night</item>
        <item name="logListBackgroundColor">@color/log_list_bg_color_night</item>
        <item name="logItemBackgroundColor">@color/log_item_bg_color_night</item>
        <item name="bottomNavItemTextColor">@drawable/bottom_nav_item_text_night</item>
        <item name="bottomNavItemIconColor">@drawable/bottom_nav_item_icon_night</item>
        <item name="bottomNavBackgroundColor">@color/color_primary_night</item>
        <item name="toolbarBackgroundColor">@color/toolbar_bg_color_night</item>
        <item name="progressBarColor">@color/color_progress_bar_night</item>
        <item name="diabetesControlGoodColor">@color/color_good_diabetes_control_night</item>
        <item name="diabetesControlAvgColor">@color/color_avg_diabetes_control_night</item>
        <item name="diabetesControlBadColor">@color/color_bad_diabetes_control_night</item>
        <item name="beforeMealLineColor">@color/color_before_meal_line_night</item>
        <item name="beforeMealFillColor">@color/color_before_meal_fill_night</item>
        <item name="afterMealLineColor">@color/color_after_meal_line_night</item>
        <item name="afterMealFillColor">@color/color_after_meal_fill_night</item>
        <item name="a1cLineColor">@color/color_a1c_line_night</item>
        <item name="a1cFillColor">@color/color_a1c_fill_night</item>
        <item name="chartTextColor">@color/color_chart_text_night</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
    <style name="Theme.GlucoseTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.GlucoseTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GlucoseTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>
</resources>
